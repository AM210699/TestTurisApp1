<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.testturisapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon_air"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon_airplane_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".menu.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".menu.splash.menu.MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>